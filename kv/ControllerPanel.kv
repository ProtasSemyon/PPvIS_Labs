<ControllerPanel@BoxLayout>:
    Button:
        text:"Open"
        on_press: root.openDialog()
    Button:
        text:"Save"
        on_press: root.save()
    Button:
        text:"Search"
        on_press: root.searchDialog()
    Button:
        text:"Delete"
        on_press: root.deleteDialog()
    Button:
        text: "Add record"
        on_press: root.addRecordDialog()